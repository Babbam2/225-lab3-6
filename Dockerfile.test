# Use the official Selenium base image with standalone Chrome
FROM selenium/standalone-chrome:latest

# Set working directory in the container
WORKDIR /usr/src/app

# Assuming you're using Python for your Selenium tests
# Install Python and pip
USER root
RUN apt-get update && apt-get install -y python3 python3-pip

# Copy your test script into the container
COPY test_html_elements.py .
COPY requirements.txt .

# Install any required Python dependencies
RUN pip3 install -r requirements.txt

# Command to run your tests
CMD ["python3", "test_html_elements.py"]
